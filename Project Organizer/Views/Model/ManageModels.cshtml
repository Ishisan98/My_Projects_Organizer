@model Project_Organizer.Models.Project.Model;
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>

    <title>Manage Models</title>
</head>

<body>

    <div class="container-fluid">

        <h1>Manage Models</h1>

        <a href="/project/dashboard">Return to Dashboard</a>
        <br /><br />


        <form asp-action="ManageModels" method="post">

            <div class="card" style="width: 70%">
                <div class="card-body">
                    <div class="row" style="height:2rem; padding-bottom:3rem;">
   
                        <input id="projectId" asp-for="Project_Id" value="@ViewBag.ProjectId" hidden />

                        <div class="col-sm-3"> 
                            <input id="modelName" type="text" asp-for="Model_Name" placeholder="Model Name" style="width:100%"/> 
                        </div>

                        <div class="col-sm-8"> 
                            <input id="description" type="text" asp-for="Description" placeholder="Description" style="width:100%" />
                        </div>

                        <div class="col" style="width: 10%"> 
                            <button class="btn btn-sm btn-primary" type="submit">Add</button> 
                        </div>
                        
                    </div>
                </div>
            </div>

        </form>
        </br>

        <div class="card" style="width: 100%">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Model Name</th>
                        <th>Description</th>
                        <th>No of Properties</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (ViewBag.Models != null)
                    {
                        @foreach (var m in ViewBag.Models)
                        {
                            <tr>
                                <td>@m.Model_Name</td>
                                <td>@m.Description</td>
                                <td></td>
                                <td>
                                    <a href="#" class="btn btn-primary" type="submit">Update</a>
                                    <a href="#" class="btn btn-danger" type="submit">Delete</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>


    </div>

</body>

</html>
