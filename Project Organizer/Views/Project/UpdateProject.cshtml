@model Project_Organizer.Models.Project.Project;
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>

    <title>Update Project</title>
</head>

<body>

    <div class="container-fluid">

        <h1>Project Details</h1>

        <a href="/project/dashboard">Return to Dashboard</a>
        </br></br>

        @if (ViewBag.Project != null)
        {
            <form asp-action="UpdateProject" method="post">

                <div class="card" style="width: 60rem;">
                    <div class="card-body">


                        <input type="number" asp-for="Project_Id" value="@ViewBag.Project.Project_Id" hidden/>
                        <input type="datetime" asp-for="Created_Date" value="@ViewBag.Project.Created_Date" hidden/>


                        <div class="row" style="height:2rem; padding-bottom:3rem;">
                            <div class="col"> <b class="mb-0">Project ID</b> </div>
                            <div class="col-sm-8"> <input id="projectId" type="text" value="@ViewBag.Project.Project_Id" style="width:20rem;" disabled/> </div>
                        </div>

                        <div class="row" style="height:2rem; padding-bottom:3rem;">
                            <div class="col"> <b class="mb-0">Project Name</b> </div>
                            <div class="col-sm-8"> <input id="projectName" type="text" asp-for="Project_Name" value="@ViewBag.Project.Project_Name" style="width:20rem;"/> </div>
                        </div>

                        <div class="row" style="height:2rem; padding-bottom:3rem;">
                            <div class="col"> <b class="mb-0">Description</b> </div>
                            <div class="col-sm-8"> <input id="projectDescription" type="text" asp-for="Description" value="@ViewBag.Project.Description" style="width:20rem;"/></div>
                        </div>

                        <div class="row" style="height:2rem; padding-bottom:3rem;">
                            <div class="col"> <b class="mb-0">Created Date</b> </div>
                            <div class="col-sm-8"> <input id="projectCreateDate" type="text" value="@ViewBag.Project.Created_Date.ToString("dd/MM/yyyy")" style="width:20rem;" disabled /></div>
                        </div>

                        <div class="row" style="height:2rem; padding-bottom:3rem;">
                            <div class="col"> <b class="mb-0">Project Status</b> </div>
                            <div class="col-sm-8">
                                <select id="projectStatus" asp-for="Project_Status" value="@ViewBag.Project.Project_Status">
                                    <option value="true">In Progress</option>
                                    <option value="false">Finished</option>
                                </select>
                            </div>
                        </div>

                        <div class="row" style="height:2rem; padding-bottom:3rem;">
                            <div class="col"> <b class="mb-0">Manage:</b> </div>
                            <div class="col-sm-8">
                                    <a href="/model/managemodels/@ViewBag.Project.Project_Id" class="btn btn-secondary" type="submit">Models</a>
                                <a href="#" class="btn btn-secondary">Views</a>
                                <a href="#" class="btn btn-secondary">Controllers</a>
                                <a href="#" class="btn btn-secondary">Repositories</a>
                                <a href="#" class="btn btn-secondary">Interfaces</a>
                                <a href="#" class="btn btn-secondary">Utilities</a>
                            </div>
                        </div>

                    </div>
                </div>
                <br/>
                <button class="btn btn-primary" type="submit" style="width:5rem;">Update</button>

            </form>
        }

    </div>

</body>

</html>
